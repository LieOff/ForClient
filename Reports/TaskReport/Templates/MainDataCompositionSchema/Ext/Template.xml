		<query>SELECT ALLOWED
	Territory.Ref,
	TerritoryOutlets.Outlet,
	TerritorySRs.SR AS SR
INTO Tr
FROM
	Catalog.Territory AS Territory
		LEFT JOIN Catalog.Territory.Outlets AS TerritoryOutlets
		ON Territory.Ref = TerritoryOutlets.Ref
		LEFT JOIN Catalog.Territory.SRs AS TerritorySRs
		ON Territory.Ref = TerritorySRs.Ref
;

////////////////////////////////////////////////////////////////////////////////
SELECT ALLOWED DISTINCT
	Task.Outlet,
	Task.Ref,
	Task.FactExecutor,
	Task.Status,
	Task.Date,
	Task.EndPlanDate,
	Task.ExecutionDate
INTO task
FROM
	Document.Task AS Task
{WHERE
	(Task.EndPlanDate &gt; &amp;StartDate
			OR Task.EndPlanDate = &amp;EmptyDate),
	(Task.Date &lt; &amp;CurrDate),
	(Task.StartPlanDate &lt; &amp;EndDate)}
;

////////////////////////////////////////////////////////////////////////////////
SELECT
	task.Outlet,
	task.Ref AS task,
	task.FactExecutor,
	task.Status,
	Tr.Ref AS Territory,
	Tr.Ref.Owner AS Region,
	CASE
		WHEN NOT task.Status
				AND (task.EndPlanDate &gt;= BEGINOFPERIOD(&amp;CurrDate, DAY)
					OR task.EndPlanDate = &amp;EmptyDate)
			THEN 1
		ELSE 0
	END AS IsPlanned,
	CASE
		WHEN task.Status
				AND (task.EndPlanDate &gt; task.ExecutionDate
					OR task.EndPlanDate = &amp;EmptyDate)
			THEN 1
		ELSE 0
	END AS IsDone,
	CASE
		WHEN NOT task.Status
				AND task.EndPlanDate &lt; BEGINOFPERIOD(&amp;CurrDate, DAY)
				AND task.EndPlanDate &lt;&gt; DATETIME(1, 1, 1)
			THEN 1
		WHEN task.Status
				AND task.EndPlanDate &lt; task.ExecutionDate
				AND task.EndPlanDate &lt;&gt; DATETIME(1, 1, 1)
			THEN 1
		ELSE 0
	END AS IsOverdue
FROM
	task AS task
		LEFT JOIN Tr AS Tr
		ON task.Outlet = Tr.Outlet
			AND task.FactExecutor = Tr.SR

ORDER BY
	task.Ref.Date</query>
