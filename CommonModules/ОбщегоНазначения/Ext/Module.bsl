			ИсключенияПоискаСсылок.Вставить(ЭлементМетаданные, "*");
			Продолжить;
		КонецЕсли;
		
		// Если указан конкретный реквизит объекта метаданных:
		ПутиКРеквизитам = ИсключенияПоискаСсылок[ЭлементМетаданные];
